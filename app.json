{
  "expo": {
    "name": "AI Matrx",
    "slug": "ai-matrx-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "aimatrx",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.aimatrx.mobile",
      "supportsTablet": true,
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSCameraUsageDescription": "AI Matrx needs camera access to capture photos and videos for your conversations",
        "NSMicrophoneUsageDescription": "AI Matrx needs microphone access for voice input and audio messages",
        "NSPhotoLibraryUsageDescription": "AI Matrx needs photo library access to select images for your conversations",
        "NSPhotoLibraryAddUsageDescription": "AI Matrx needs to save photos and files to your library",
        "NSFaceIDUsageDescription": "AI Matrx uses Face ID to secure your account"
      }
    },
    "android": {
      "package": "com.aimatrx.mobile",
      "adaptiveIcon": {
        "backgroundColor": "#0a0a0a",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "AI Matrx needs camera access to capture photos and videos for your conversations",
          "microphonePermission": "AI Matrx needs microphone access for voice input and audio messages",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "AI Matrx needs photo library access to select images for your conversations"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "AI Matrx needs photo library access to save images",
          "savePhotosPermission": "AI Matrx needs permission to save photos to your library",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#0A84FF"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0a0a0a",
          "dark": {
            "backgroundColor": "#0a0a0a"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
